<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewItemBuscar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icono_cuadricula"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewItemBuscarTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo del Producto"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/textViewItemBuscarPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$50"
            android:textSize="30sp"/>   

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        
        <LinearLayout
            android:id="@+id/linearLayoutItemBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icono_cuadricula"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icono_cuadricula"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icono_cuadricula"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icono_cuadricula"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icono_cuadricula"/>
            
        </LinearLayout>

        <TextView
            android:id="@+id/textViewItemBuscarVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="373K - Tamaulipas"
            android:textSize="17sp"/>
        
    </LinearLayout>
</LinearLayout>