<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CapaPresentacion.actividades.FiltrosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:text="Precio"
                android:fontFamily="@font/comfortaa_light"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elige un rango de precio"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etFiltroPrecioMin"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:hint="Mínimo"
                        android:inputType="numberDecimal"
                        android:textAlignment="center" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/etFiltroPrecioMax"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:hint="Máximo"
                        android:inputType="numberDecimal"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:fontFamily="@font/comfortaa_light"
                android:text="Categoría"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivFiltroCategoriaLacteo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/lacteos_icono" />

                    <ImageView
                        android:id="@+id/ivFiltroCategoriaCarne"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/carnes_icono" />

                    <ImageView
                        android:id="@+id/ivFiltroCategoriaSemilla"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/semillas_icono" />

                    <ImageView
                        android:id="@+id/ivFiltroCategoriaHortaliza"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/hortalizas_icono" />
                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:text="Temporada"
                android:fontFamily="@font/comfortaa_light"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFiltroTemporadaPrimavera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/primavera" />

                <ImageView
                    android:id="@+id/ivFiltroTemporadaVerano"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/verano" />

                <ImageView
                    android:id="@+id/ivFiltroTemporadaOtono"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/otonio" />

                <ImageView
                    android:id="@+id/ivFiltroTemporadaInvierno"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/invierno1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:fontFamily="@font/comfortaa_light"
                android:text="Locación"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="País"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/sFiltroPais"
                android:layout_width="288dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Estado"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/sFiltroEstado"
                android:layout_width="288dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"
                android:textSize="24sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:text="Certificaciones"
                android:fontFamily="@font/comfortaa_light"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/cert1" />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/certificado" />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/certificado1" />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/certificado3" />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/certificado4" />

                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:text="Tiempo de Cosecha"
                android:fontFamily="@font/comfortaa_light"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFiltroTiempoMenosMes"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/unomes" />

                <ImageView
                    android:id="@+id/ivFiltroTiempoMenosAnio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/unoanio" />

                <ImageView
                    android:id="@+id/ivFiltroTiempoMasAnio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/unoaniosmas" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisBajo"
                android:fontFamily="@font/comfortaa_light"
                android:text="Reputación del agricultor"
                android:textAlignment="center"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="22sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <RatingBar
                android:id="@+id/rbFiltroReputacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="3.5"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <Button
                android:id="@+id/bAplicarFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@color/colorGrisOscuro"
                android:text="Aplicar Filtros"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
