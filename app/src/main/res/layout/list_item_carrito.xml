<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@android:color/background_light"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivItemCarrito"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_insert_photo_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemCarritoProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MandrÃ¡goras"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvItemCarritoUnidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 unidades"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="16sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/tvItemCarritoPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60"
                android:textColor="@color/colorVerdeFuerte"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: "
            android:textColor="@color/colorGrisOscuro"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etItemCarritoCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="000"
            android:textAlignment="center"
            android:textColor="@color/colorGrisOscuro" />

    </LinearLayout>

</LinearLayout>