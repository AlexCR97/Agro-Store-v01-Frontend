<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapaPresentacion.actividades.Vender4Activity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif"
        android:text="Información de tu producto"
        android:textAlignment="center"
        android:textColor="@color/colorGrisOscuro"
        android:textSize="30sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Título de la publicación"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etVenderTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="El titulo visualizado por los compradores"
        android:inputType="textMultiLine"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Descripción de tu producto"
        android:textAlignment="center"
        android:textColor="@color/colorGrisOscuro"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etVenderDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Una descripcion detallada de tu producto"
        android:inputType="textMultiLine"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Producto"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <Spinner
        android:id="@+id/sVenderProductos"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:spinnerMode="dropdown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Precios sugeridos"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textAlignment="center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="Por tonelada"/>
            <TextView
                android:id="@+id/tvVenderPrecioTonelada"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="Por tonelada"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="Por kilogramo"/>
            <TextView
                android:id="@+id/tvVenderPrecioKilogramo"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="Por kilogramo"/>
        </TableRow>
    </TableLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Precio"
        android:textAlignment="center"
        android:textColor="@color/colorGrisOscuro"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icono_money"/>
        <EditText
            android:id="@+id/etVenderPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio de tu producto"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Terreno"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <Spinner
        android:id="@+id/sVenderTerrenos"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:spinnerMode="dropdown"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="Tamaño"/>
            <TextView
                android:id="@+id/tvVenderTamanoMedida"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="Tamano"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="Tipo de suelo"/>
            <TextView
                android:id="@+id/tvVenderTipoSuelo"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="Tipo de suelo"/>
        </TableRow>
    </TableLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/buttonSiguienteVender4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Siguiente"
        android:drawableLeft="@drawable/seguir"
        android:background="#E5EE81"
        android:textSize="15sp"/>

</LinearLayout>
</ScrollView>