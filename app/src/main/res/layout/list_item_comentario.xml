<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvComentarioNombreApellido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="0.75"
            android:text="Nombre Apellido"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComentarioFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Hace 3 horas"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvComentarioComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Este es un comentario"
        android:textAlignment="textStart"
        android:textColor="@color/colorGrisOscuro"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvComentarioResponder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Responder"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="@color/colorGrisClaro"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvComentarioRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorGrisClaro"
            android:lineSpacingExtra="8sp"
            android:text="Esta es la respuesta del comentario"
            android:textAlignment="viewStart"
            android:textColor="@color/colorGrisBajo"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
