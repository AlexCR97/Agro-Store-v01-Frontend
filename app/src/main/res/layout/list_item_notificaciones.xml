<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8EAF6"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewItemNotifyCliente"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icono_cuadricula"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linearLayoutItemNotifyCliente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textViewNotifyUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="usuario"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" le ha "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textViewItemNotifyReaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="interesado"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" nuestro producto "
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>