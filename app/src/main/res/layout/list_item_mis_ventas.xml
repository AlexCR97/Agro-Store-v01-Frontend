<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#D5F5B9"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewItemMisVentas"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/zanahorias"/>

    <Space
        android:layout_width="15dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linearLayoutItemMisVentas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEDIDO:"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textViewItemMisVentasPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1374837"
            android:textColor="#454957"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPRADOR:"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textViewItemMisVentasCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454957"
            android:text="Pomona Sprout"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>