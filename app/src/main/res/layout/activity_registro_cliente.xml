<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CapaPresentacion.actividades.RegistroClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteUsuario"
                    app:layout_constraintEnd_toStartOf="@+id/etRegistroClienteUsuario"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteUsuario"
                    app:srcCompat="@drawable/usuario" />

                <EditText
                    android:id="@+id/etRegistroClienteUsuario"
                    android:layout_width="288dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Usuario"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.552"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView50" />

                <ImageView
                    android:id="@+id/imageView55"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.956"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.023"
                    app:srcCompat="@drawable/help_verde" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icono_usuario" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorVerdeFuerte"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/ibRegistroClienteFechaNac"
                    app:layout_constraintStart_toStartOf="@+id/ibRegistroClienteFechaNac"
                    app:layout_constraintTop_toBottomOf="@+id/ibRegistroClienteFechaNac" />

                <EditText
                    android:id="@+id/etRegistroClienteCorreoElectronico"
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteConfirmarContrasena" />

                <ImageButton
                    android:id="@+id/ibRegistroClienteRegistrar"
                    android:layout_width="323dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/ibRegistroClienteFechaNac"
                    app:layout_constraintStart_toStartOf="@+id/ibRegistroClienteFechaNac"
                    app:layout_constraintTop_toBottomOf="@+id/cbRegistroClienteTerminos"
                    app:srcCompat="@drawable/tbn_registrar" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteNombres"
                    app:layout_constraintEnd_toStartOf="@+id/etRegistroClienteNombres"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteNombres"
                    app:layout_constraintVertical_bias="0.50"
                    app:srcCompat="@drawable/usuario" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteContrasena"
                    app:layout_constraintStart_toStartOf="@+id/imageView13"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteContrasena"
                    app:srcCompat="@drawable/password" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteCorreoElectronico"
                    app:layout_constraintStart_toStartOf="@+id/imageView15"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteCorreoElectronico"
                    app:srcCompat="@drawable/email" />

                <EditText
                    android:id="@+id/etRegistroClienteCorreoRespaldo"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Correo de respaldo"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView16"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteCorreoElectronico" />

                <EditText
                    android:id="@+id/etRegistroClienteConfirmarContrasena"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteContrasena"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteContrasena" />

                <EditText
                    android:id="@+id/etRegistroClienteCalle"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Calle"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView29"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" />

                <EditText
                    android:id="@+id/etRegistroClienteColonia"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Colonía"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView29"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteCalle" />

                <EditText
                    android:id="@+id/etRegistroClienteCiudad"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Ciudad"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteColonia"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteColonia" />

                <EditText
                    android:id="@+id/etRegistroClienteCodigoPostal"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Código postal"
                    android:inputType="number"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteCiudad"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteCiudad" />

                <EditText
                    android:id="@+id/etRegistroClienteEstado"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Estado"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteCodigoPostal"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteCodigoPostal" />

                <EditText
                    android:id="@+id/etRegistroClientePais"
                    android:layout_width="288dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="País"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteEstado"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteEstado" />

                <EditText
                    android:id="@+id/etRegistroClienteContrasena"
                    android:layout_width="288dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteNombres"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteNombres" />

                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteCorreoRespaldo"
                    app:layout_constraintStart_toStartOf="@+id/imageView16"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteCorreoRespaldo"
                    app:srcCompat="@drawable/email" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteCalle"
                    app:layout_constraintStart_toStartOf="@+id/imageView29"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteCalle"
                    app:srcCompat="@drawable/empresa" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteCiudad"
                    app:layout_constraintStart_toStartOf="@+id/imageView29"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteCiudad"
                    app:srcCompat="@drawable/empresa" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteCodigoPostal"
                    app:layout_constraintStart_toStartOf="@+id/imageView29"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteCodigoPostal"
                    app:srcCompat="@drawable/empresa" />

                <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClientePais"
                    app:layout_constraintStart_toStartOf="@+id/imageView33"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClientePais"
                    app:srcCompat="@drawable/empresa" />

                <ImageView
                    android:id="@+id/imageView33"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteEstado"
                    app:layout_constraintStart_toStartOf="@+id/imageView12"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteEstado"
                    app:srcCompat="@drawable/empresa" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteColonia"
                    app:layout_constraintStart_toStartOf="@+id/imageView29"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteColonia"
                    app:srcCompat="@drawable/empresa" />

                <ImageButton
                    android:id="@+id/ibRegistroClienteFechaNac"
                    android:layout_width="323dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClientePais"
                    app:srcCompat="@drawable/fecha_nacimiento" />

                <CheckBox
                    android:id="@+id/cbRegistroClienteTerminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Acepto términos y condiciones"
                    android:textColor="@color/colorGris"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/ibRegistroClienteFechaNac"
                    app:layout_constraintStart_toStartOf="@+id/ibRegistroClienteFechaNac"
                    app:layout_constraintTop_toBottomOf="@+id/tvFecha" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/etRegistroClienteConfirmarContrasena"
                    app:layout_constraintStart_toStartOf="@+id/imageView14"
                    app:layout_constraintTop_toTopOf="@+id/etRegistroClienteConfirmarContrasena"
                    app:srcCompat="@drawable/password" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Cuenta cliente"
                    android:textColor="@color/colorGris"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView10"
                    app:layout_constraintStart_toStartOf="@+id/imageView10"
                    app:layout_constraintTop_toBottomOf="@+id/imageView10" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Domicilio"
                    android:textColor="@color/colorGris"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteCorreoRespaldo" />

                <EditText
                    android:id="@+id/etRegistroClienteNombres"
                    android:layout_width="288dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Nombre(s)"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorGrisClaro"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/etRegistroClienteUsuario"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroClienteUsuario" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>