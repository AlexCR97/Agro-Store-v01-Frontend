<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/searchViewBuscadorFragmento"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorVerdeFuerte" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewBuscarHortalizas"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="0sp"
                android:layout_marginTop="0sp"
                android:layout_marginEnd="0sp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_hortalizas" />

            <ImageView
                android:id="@+id/imageViewBuscarLacteos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_lacteos"/>

            <ImageView
                android:id="@+id/imageViewBuscarCarnes"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_carnes"/>

            <ImageView
                android:id="@+id/imageViewBuscarSemillas"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_semillas"
                android:scrollbarSize="@dimen/activity_horizontal_margin"/>

         </LinearLayout>
    </ScrollView>


</LinearLayout>