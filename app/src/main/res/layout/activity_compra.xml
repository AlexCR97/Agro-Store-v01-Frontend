<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CapaPresentacion.actividades.CompraActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:background="#ECEFF1"
                android:text="OPCION DE PAQUETERIA"
                android:textColor="#558B2F"
                android:textSize="22sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:drawableRight = "@drawable/fedex"/>

                        <RadioButton
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:drawableRight = "@drawable/dhl"/>

                        <RadioButton
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:drawableRight = "@drawable/estafeta"/>


                        <RadioButton
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:text="OTRO"/>
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:background="#ECEFF1"
                android:text="DATOS DE ENVIO"
                android:textColor="#558B2F"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Direccion: " />

                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Codigo Postal: " />

                <TextView
                    android:id="@+id/cp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Nombre de quien recibe:" />

                <TextView
                    android:id="@+id/nombreQuienRecibe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Numero de paquete: " />

                <TextView
                    android:id="@+id/numeroDePaquete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Numero de cliente: " />

                <TextView
                    android:id="@+id/numeroDeCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Numero de rastreo: " />

                <TextView
                    android:id="@+id/numeroDeRastreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Desea enviarlo a otra direccion?"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#40C4FF" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:background="#ECEFF1"
                android:text="METODO DE PAGO"
                android:textColor="#558B2F"
                android:textSize="22sp" />


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:drawableRight = "@drawable/visa"/>

                    <RadioButton
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:drawableRight = "@drawable/mastercard"/>

                    <RadioButton
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:drawableRight = "@drawable/paypal"/>

                    <RadioButton
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:drawableRight = "@drawable/bitcoin"/>

                    <RadioButton
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:drawableRight = "@drawable/efectivo"/>
                </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precio total"
                            android:textSize="18sp" />

                        <Space />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$526.00"
                            android:textSize="18sp" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E0E0E0" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subtotal"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semillas huachicoleras"
                            android:textSize="18sp" />

                        <Space />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$150.00"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semillas huachicoleras"
                            android:textSize="18sp" />

                        <Space />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$150.00"
                            android:textSize="18sp" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E0E0E0" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IVA"
                            android:textSize="18sp" />

                        <Space />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="TOTAL"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="$21,530.00"
                            android:textSize="18sp" />
                    </TableRow>

                </TableLayout>

                <Button
                    android:id="@+id/botonComprar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icono_money"
                    android:drawablePadding="10dp"
                    android:text="Ordenar"
                    android:textColor="#3F3D3D"
                    android:textSize="20sp"
                    app:backgroundTint="#C5E1A5"
                    android:layout_margin="@dimen/activity_vertical_margin"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>