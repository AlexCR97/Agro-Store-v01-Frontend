<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapaPresentacion.actividades.BuscarActivity"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/searchViewBuscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorVerdeFuerte"
        android:foregroundTint="@android:color/background_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icono_cuadricula"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/buttonFiltrar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorVerdeFuerte"
            android:text="Filtrar"
            android:textAllCaps="false" />

        <Space
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorVerdeFuerte"
            android:text="Ordenar"
            android:textAllCaps="false" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewBuscar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>